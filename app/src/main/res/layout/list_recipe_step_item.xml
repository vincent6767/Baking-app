<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_recipe_step_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/list_recipe_step_item_recipe_step_padding"
        android:text="Step 1"
        android:textSize="@dimen/list_recipe_step_item_recipe_step_short_description_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/list_recipe_step_item_recipe_step_padding"
        android:layout_marginRight="@dimen/list_recipe_step_item_recipe_step_padding"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>